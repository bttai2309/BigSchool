
@model BigSchool.ViewModels.CourseViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Khóa học bạn đang tham gia</h2>

<ul class="course">
    @foreach (var course in Model.UpcommingCourses)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
                <div class="time">
                    @course.DateTime.ToString("HH : mm")
                </div>
            </div>
            <hr />
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                    
                    @if (Model.ShowAction)
                    {
                        <button class="btn btn-danger btn-sm js-toggle-follow"  style = "pointer-events:none" >Đã theo dõi</button>
                    }

                </span>

                <span class="category">
                    @course.Category.Name
                    @if (course.IsCanceled)
                    {
                        <span class="label label-warning"> Đã hủy</span>
                    }
                    @if (Model.ShowAction && !course.IsCanceled)
                    {
                        <button data-course-id="@course.Id" class="btn btn-info btn-sm js-toggle-attendance" data-user-id="@course.LecturerId" style = "pointer-events:none">Tham gia</button>
                    }
                </span>
               

            </div>
        </li>

    }
</ul>


